{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // Disappointing ðŸ˜”
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": ["./src/*"],
      "@lib/*": ["./lib/*"],
      "@test/*": ["./test/*"],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "vitest.config.ts",
  ],
  "exclude": [
    "../../../../node_modules",
    "../../node_modules",
    "public",
    "dist",
    "test/integration/mock/assets/scripts/*"
  ]
}
